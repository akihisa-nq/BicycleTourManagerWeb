<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= yield(:title) %></title>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "vendor/modernizr", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>
<body>

<%= yield :out_of_frames %>

<%= render partial: "layouts/login_menu" %>

<div class="ui-layout-north">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><a href="#"><%= yield :title %></a></h1>
        <%= yield :title_area %>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="left">
        <%= yield :menus %>
      </ul>
      <ul class="right">
        <%= yield :manage %>
        <% if user_signed_in? %>
        <li><a href="#" data-dropdown="user"><strong><%= current_user.email %></strong></a></li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>
<div class="ui-layout-west">
  <%= yield :west %>
</div>
<div class="ui-layout-center">
  <div class="map" id="map" style="width: 100%; height: 100%;"></div>
</div>
<div class="ui-layout-south">
  <%= yield :south %>
</div>

</body>
</html>
